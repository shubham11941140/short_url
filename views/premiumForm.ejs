<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="premiumSecondPage/style2.css">
    <title>URL Shortener</title>
</head>
<body>
    <div class="customurl">   
        <h1>Custom URL Shortener</h1> 
        <form action="/customurl" method="post">
            <input style=" display: none;"type="email" name="email" id="" value="<%=email %>">
            <label for="urldata">URL</label>
            <input type="url" name="urldata" id="">
            <label for="customurldata">Custom String</label>
            <input type="string" name="customurldata" id="">
            <label for="TTL">Duration (in days)</label>
            <input type="number" name="TTL" id="">
            <!-- <label for="TTL">Phone Number</label>
            <input type="number" name="phonenum" id=""> -->
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>


    <div id="past-history">
        <h2>Here is your past history :</h2>

        <table id="history-table">

            <tr>
                <th>URL</th>
                <th>Shortened URL</th>
                <th>Created At</th>
                <th>Number of redirections</th>
            </tr>
        
        </table>
    </div>



    <script>

        let tableData = '<%-data%>';
        // console.log(JSON.parse(tableData).length);

        tableData = JSON.parse(tableData);
        let addedData = "";
        for(let i = 0; i < tableData.length ; i++)
        {
            addedData += "<tr>\
                <td>" + tableData[i].url + "</td>\
                <td>" + tableData[i].shortenedurl + "</td>\
                <td>" + tableData[i].creation_timestamp + "</td>\
                <td>" + tableData[i].num_of_redirections + "</td>\
                </tr>";
 
        }
		document.getElementById('history-table').innerHTML += addedData;

    </script>
</body>
</html>